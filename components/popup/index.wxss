
.popup {
  position: fixed;
  z-index: 11500;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100vw;
  height: 100vh;
}

.popup__overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: -1;
}

.popup__content {
  position: relative;
}

.popup__content.popup--position-bottom {
  position: absolute;
  bottom: 0;
  width: 100vw;
}

.t-popup__close {
  position: absolute;
  top: 0;
  right: 0;
  padding: 20rpx;
  line-height: 1;
}

.popup-content{
  background: #f5f5f5;
  margin-bottom: env(safe-area-inset-bottom);
  border-radius: 16rpx 16rpx 0 0;
}
