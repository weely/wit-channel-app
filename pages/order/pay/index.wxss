.pay-page {
  padding: 16rpx 24rpx;
  height: 100vh;
  background-color: #f5f5f5;
  font-size: 32rpx;
}
.pay-page .page-container {
  background-color: #fff;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}
.pay-page .page-container .item {
  padding: 16rpx 0;
}
.pay-page  .class-goods-fee {
  font-size: 40rpx;
  color: #fa4126;
  font-family: DIN Alternate;
}

.pay-btn {
  margin: 40rpx auto;
  font-size: 36rpx;
  color: #fff;
  background-color: #fa4126;
  border-radius: 40rpx 40rpx;
  padding: 12rpx 40rpx;
  width: fit-content;
}