.place-order-page {
  padding: 0;
  margin: 0;
}

.location-container {
  text-align: center;
  padding: 8rpx 0 20px;
  /* background-color: #303030; */
  /* background-color: #ffffff; */
}
.location-content {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #633b3b;
  /* color: #FFD700; */
}
.location-content .location-label {
  padding: 16rpx 0 24rpx;
  font-size: 24rpx;
}
.location-content .location-icon{
  width: 40rpx;
  height: 40rpx;
}

.svg-icon {
  display: inline-flex;
  width: 1em;
  height: 1em;
  overflow: hidden;
  font-size: 40rpx;
}

.svg-icon__inner {
  width: 1em;
  height: 1em;
  transform: translateY(-1em);
  filter: drop-shadow(0 1em 0 currentColor);
}