.goods-detail-page {
    display: flex;
    flex-direction: column;
    padding: 0;
}
.goods-detail-page .gd-swiper-wrapper {
  position: relative;
}
.goods-detail-page .gd-swiper {
  width: 100%;
  height: 750rpx;
  font-size: 0;
}
.goods-detail-page .gd-swiper .swipe-img {
  width: 100%;
  height: 750rpx;
}
.gd-swiper-wrapper .swiper-nav__fraction {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  padding: 0 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
  font-size: 24rpx;
}

.goods-detail-page .goods-info {
  padding: 26rpx 30rpx 120rpx;
  background-color: #fff;
}

.goods-detail-page .goods-info .goods-price {
  display: flex;
  align-items: baseline;
}

.goods-detail-page .goods-info .goods-price .class-goods-price {
  font-size: 64rpx;
  color: #fa4126;
  font-weight: bold;
  font-family: DIN Alternate;
}

.goods-price .class-goods-discount {
  font-size: 28rpx;
  color: #fa4126;
  margin-left: 8rpx;
  font-family: DIN Alternate;
}
.goods-detail-page .goods-info .goods-price .class-goods-del {
  position: relative;
  font-weight: normal;
  left: 16rpx;
  bottom: 2rpx;
  color: #999999;
  font-size: 32rpx;
}

.goods-info .goods-title {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: 400;
  display: -webkit-box;
  height: 48rpx;
  overflow: hidden;
  word-break: keep-all;
  white-space: nowrap;
  text-overflow: ellipsis;
  line-height: 36rpx;
}

.goods-info .goods-resume {
  font-size: 28rpx;
  color: #666;
  text-align: justify;
}

.goods-detail-page .goods-bottom-operation {
  position: fixed;
  left: 0;
  bottom: 0;
  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
  border-top: solid 1rpx #eee;
  padding: 12rpx 24rpx calc(12rpx + env(safe-area-inset-bottom));
}
.goods-bottom-operation .operation-groups {
  display: flex;
  align-items: center;
  justify-content:space-between;
}

.goods-detail-page .goods-bottom-operation .order-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 80rpx;
  color: #fff;
  background-color: #fa4126;
  border-radius: 40rpx 40rpx;
}


.operation-groups .class-goods-symbol {
  font-size: 28rpx;
  font-weight: normal;
}

.operation-groups .class-goods-fee {
  font-size: 36rpx;
  color: #fa4126;
  font-weight: bold;
  font-family: DIN Alternate;
}

