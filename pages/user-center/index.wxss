page {
  background-color: #f5f5f5;
}
.user-center-page {
  color: #aaa;
  background-color: #f5f5f5;
}

.user-center-card {
  position: fixed;
  top: 0;
  left: 0;
  box-sizing: border-box;
  width: 100%;
  height: 480rpx;
  background-image: url(https://cdn-we-retail.ym.tencent.com/miniapp/template/user-center-bg-v1.png);
  /* background-image: url(https://s1.ax1x.com/2022/05/15/O28jkd.png); */
  background-size: cover;
  background-repeat: no-repeat;
  padding: 0 48rpx;
}

.user-center-card .userinfo {
  display: flex;
  align-items: center;
  margin: 192rpx 0 48rpx;
  padding: 0;
}

.user-center-card .userinfo .userinfo-avatar {
  overflow: hidden;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.user-center-card .userinfo .userinfo-nickname, .user-center-card .userinfo .auth-btn {
  font-size: 36rpx;
  line-height: 48rpx;
  color: #333;
  font-weight: bold;
  margin-left: 24rpx;
  margin-right: 16rpx;
}

.user-center-card .userinfo .auth-btn {
  font-size: 28rpx;
  color: #666;
  text-decoration: underline;
}
.user-center-page .userpage-content {
  margin-top: 360rpx;
  position: relative;
  padding: 0 32rpx;
}

.uc-group {
  margin: 0 0 24rpx;
  background-color: #fff;
  border-radius: 16rpx;
}

.gap-line {
  position: relative;
  color: #e5e5e5;
  width: 100%;
}

.userpage-content .userpage-citem {
  padding: 32rpx;
  color: #303030;
  display: flex;
  align-items: center;
}
.userpage-citem .citem-label {
  flex: 1;
}
.userpage-citem .citem-ricon {
  font-size: 0;
}
.userpage-citem .citem-ricon image{
  width: 48rpx;
  height: 48rpx;
}


.gap-line::after {
  position: absolute;
  display: block;
  content: '';
  box-sizing: border-box;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: left top;
  border-bottom: 2rpx solid #e5e5e5;
}

.popup-content {
  background: #f5f5f5;
  margin-bottom: env(safe-area-inset-bottom);
  border-radius: 16rpx 16rpx 0 0;
}
.popup-content .popup-title {
  background: #fff;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  height: 112rpx;
  text-align: center;
  line-height: 112rpx;
  border-radius: 16rpx 16rpx 0 0;
}

.border-bottom-1px {
  position: relative;
}

.border-bottom-1px::after {
  position: absolute;
  display: block;
  content: '';
  box-sizing: border-box;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: left top;
  border-bottom: 2rpx solid #e5e5e5;
}
.popup-content .popup-phone,
.popup-content .popup-close {
  background: #fff;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333;
}
.popup-content .popup-phone.online {
  margin-bottom: 20rpx;
}
.popup-content .popup-phone.online::after {
  content: none;
}
.popup-content .popup-close {
  color: #333;
  border: 0;
  margin-top: 16rpx;
}
